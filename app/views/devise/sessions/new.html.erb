<div class="devise-login">
    <div>
        <h2>Log in</h2>
    </div>
    <div class="login-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "type your email" %>
            </div>

            <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "type your password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field checkbox">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="actions">
                <%= f.submit "Log in", class: "submit-button" %>
            </div>
        <% end %>
    </div>

    <%= render "devise/shared/links" %>

</div>
