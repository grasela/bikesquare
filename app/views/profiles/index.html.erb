<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Avatar data</th>
      <th>Username</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= image_tag profile.avatar_url(:small) %></td>
        <td><%= profile.username %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if policy(profile).update? %>

            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

