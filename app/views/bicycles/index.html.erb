<p id="notice"><%= notice %></p>
<h1>Bicycles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Type</th>
      <th>Size</th>
      <th>Colour</th>
      <th>Gender</th>
      <th>Year</th>
      <th>User</th>
      <th>Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bicycles.each do |bicycle| %>
      <tr>
        <td><%= bicycle.title %></td>
        <td><%= bicycle.price %></td>
        <td><%= bicycle.description %></td>
        <td><%= bicycle.brand %></td>
        <td><%= bicycle.type %></td>
        <td><%= bicycle.size %></td>
        <td><%= bicycle.colour %></td>
        <td><%= bicycle.gender %></td>
        <td><%= bicycle.year %></td>
        <td><%= link_to "#{bicycle.user.profile.username}", profile_path(bicycle.user.id) %></td>
        <% bicycle.photos.each do |photo| %>
            <td><%= image_tag photo.image_url(:medium) %> </td>
        <% end %>
        <td><%= link_to 'Show', bicycle %></td>
        <td><%= link_to 'Edit', edit_bicycle_path(bicycle) %></td>
        <td><%= link_to 'Destroy', bicycle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

