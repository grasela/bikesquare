<p>
<strong> Posted: </strong>
<%= @bicycle.created_at.strftime("%d %b %y") %>
</p>
<p>
<strong> Updated: </strong>
<%= @bicycle.updated_at.strftime("%d %b %y") %>
</p>
<strong>Title:</strong>
<%= @bicycle.title %>
</p>

<p>
<strong>Price:</strong>
<%= @bicycle.price %>
</p>

<p>
<strong>Description:</strong>
<%= @bicycle.description %>
</p>

<p>
<strong>Brand:</strong>
<%= @bicycle.brand %>
</p>

<p>
<strong>Size:</strong>
<%= @bicycle.size %>
</p>

<p>
<strong>Colour:</strong>
<%= @bicycle.colour %>
</p>

<p>
<strong>Gender:</strong>
<%= @bicycle.gender %>
</p>

<p>
<strong>Year:</strong>
<%= @bicycle.year %>
</p>


<p>
<strong>Owner:</strong>
<%= link_to "#{@owner.username} ", profile_path(@bicycle.user.id) %>
</p>
<strong>Photos</strong>

<p>    <%= link_to 'Add photos', new_photo_path(bicycle_id: @bicycle.id) if policy(@bicycle).update? %></p>
<% @photos.each do |photo| %>
    <%= image_tag photo.image_url(:medium) %>
<% end %>
</p>


<% if policy(@bicycle).update? %>
    <%= link_to 'Edit', edit_bicycle_path(@bicycle) %> |
<% end %>


<p><strong>Questions and Answers </strong> </p>
<p id="notice"><%= notice %></p> 

    <%= link_to 'Ask a question', new_query_path(bicycle_id: @bicycle) unless policy(@bicycle).no_questions  %>

<p>
<% @queries.each do |query| %>
    <p><strong>  <%= query.user.profile.username %></strong> </p>
    <p> <%= query.created_at.strftime("%d %b %y")%> </p>
    <p><%= query.question %></p>
    <% if query.answer.present? %>
        <strong>     <%= @owner.username %> </strong>

        <p><%= query.answer %> </p>
    <% else %>
        <p>Question is awaiting response from <%= @owner.username %> </p>
    
    <% end %>
    <% if  @bicycle.user == current_user && query.answer.nil?  %>
        <%= link_to "Answer this question", edit_query_path(query) %> 
    <% else %>


    <% end %>


<% end %>

