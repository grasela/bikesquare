<p id="notice"><%= notice %></p>
<h1>Bicycles</h1>
<%= flash[:alert] %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Type</th>
      <th>Size</th>
      <th>Colour</th>
      <th>Gender</th>
      <th>Year</th>
      <th>User</th>
      <th>Photos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bicycles.each do |bicycle| %>
      <tr>
        <td><%= bicycle.title %></td>
        <td><%= bicycle.price %></td>
        <td><%= bicycle.description %></td>
        <td><%= bicycle.brand %></td>
        <td><%= bicycle.type %></td>
        <td><%= bicycle.size %></td>
        <td><%= bicycle.colour %></td>
        <td><%= bicycle.gender %></td>
        <td><%= bicycle.year %></td>
        <td><%= bicycle.user.profile.username %></td>
        <td><%= image_tag bicycle.photos.first.image_url(:small) %></td>
        <td><%= link_to "SHOW BIKE", bicycle_path(bicycle.id)%> </td>

        <%# <% bicycle.photos.each do |photo| %1> %>
        <%#     <td><%= image_tag photo.image_url(:small) %1> </td> %>
        <%# <% end %1> %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

